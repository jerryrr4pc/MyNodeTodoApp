form(ng-submit="addNewTask()")
	div.form-group
		div.container
			div.row
				div.col-8
					input#description.form-control.input-lg.text-center(type="text" placeholder="{{getTextBoxPlaceholder()}}" ng-model="todoForm.DESCRIPTION")
		        
				div.col-4
					button.btn.btn-primary.btn-lg(type="submit") Add Task
					|
					input#taskDate.form-control.text-center(type="text" ng-model="todoForm.TASK_DATE")
					ul.nav.nav-pills
						li.nav-item
							a.nav-link(ng-class="{active:DATE_TAG=='TODAY'}" ng-click="DATE_TAG='TODAY'") Today
						li.nav-item
							a.nav-link(ng-class="{active:DATE_TAG=='TOMORROW'}" ng-click="DATE_TAG='TOMORROW'") Tomorrow